<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:title=" "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/bacharrow"/>

    <TextView
        android:id="@+id/whatdowehave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/poppins_bold"
        android:text="What Do We have \nin here ?"
        android:textColor="@color/white"
        android:textSize="29dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/line"
        android:layout_width="90dp"
        android:layout_height="1dp"
        android:layout_below="@+id/whatdowehave"
        android:layout_alignStart="@+id/whatdowehave"
        android:layout_marginTop="20dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/tc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:layout_below="@id/line"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins"
        android:text="With goal a driven approach"
        android:textColor="@color/white"
        android:textSize="19dp"
        android:textStyle="normal" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tc"
        android:paddingStart="50dp"
        android:layout_marginTop="30dp"
        android:paddingEnd="50dp"
        android:layout_centerInParent="true"
        android:background="@color/black"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/whitebuttonround"
        android:elevation="5dp"
        android:fontFamily="@font/poppins_medium"
        android:onClick="gotoBMIcalci"
        android:text="Next"
        android:textColor="@color/black" />


</RelativeLayout>