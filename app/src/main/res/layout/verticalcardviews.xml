<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#00000000"
                app:cardCornerRadius="12dp"
                android:layout_margin="6dp"
                android:layout_gravity="center"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.flaviofaria.kenburnsview.KenBurnsView
                        android:id="@+id/image1v"
                        android:layout_width="300dp"
                        android:layout_height="210dp"
                        android:layout_gravity="center"
                        android:src="@drawable/img5"
                        android:transitionName="example_transition2" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/textLocation"
                            android:gravity="left"
                            android:paddingTop="4dp"
                            android:paddingLeft="20dp"
                            android:text="Meditation"
                            android:textColor="#FFFFFF"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="@font/poppins"
                            android:paddingBottom="5dp"
                            android:text="Low intensity"
                            android:paddingLeft="20dp"
                            android:gravity="left"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"

                            />
                    </LinearLayout>


                </RelativeLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#00000000"
                app:cardCornerRadius="12dp"
                android:layout_margin="6dp"
                android:layout_gravity="center"

                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.flaviofaria.kenburnsview.KenBurnsView
                        android:id="@+id/image2v"
                        android:layout_width="300dp"
                        android:layout_height="210dp"
                        android:layout_gravity="center"
                        android:src="@drawable/img5"
                        android:transitionName="example_transition" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/textLocation"
                            android:gravity="left"
                            android:paddingTop="4dp"
                            android:paddingLeft="20dp"
                            android:text="Yoga"
                            android:textColor="#FFFFFF"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="@font/poppins"
                            android:paddingBottom="5dp"
                            android:text="Moderate intensity"
                            android:paddingLeft="20dp"
                            android:gravity="left"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"

                            />
                    </LinearLayout>


                </RelativeLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#00000000"
                app:cardCornerRadius="12dp"
                android:layout_margin="6dp"
                android:layout_gravity="center"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.flaviofaria.kenburnsview.KenBurnsView
                        android:id="@+id/image3v"
                        android:layout_width="300dp"
                        android:layout_height="210dp"
                        android:layout_gravity="center"
                        android:src="@drawable/img5"
                        android:transitionName="example_transition3" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/textLocation"
                            android:gravity="left"
                            android:paddingTop="4dp"
                            android:paddingLeft="20dp"
                            android:text="Weight Lifting"
                            android:textColor="#FFFFFF"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="@font/poppins"
                            android:paddingBottom="5dp"
                            android:text="High intensity"
                            android:paddingLeft="20dp"
                            android:gravity="left"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"

                            />
                    </LinearLayout>


                </RelativeLayout>


            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </ScrollView>

</LinearLayout>